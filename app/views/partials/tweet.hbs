<section class="ui raised segment">
  <div class="ui grid ">
    <div class="ui form six wide column">
      <div class="ui stacked segment">
        <form action="/tweet" method="POST">
          <div class="ui dropdown" name="receiver">
            <input type="hidden" name="receiver">
            <div class="text">Select User</div>
            <i class="ui dropdown icon"></i>
            <div class="menu">
              {{#each users}}
                <div class="item" data-value={{_id}} >{{firstName}} {{lastName}}</div>
              {{/each}}
            </div>
          </div>
          <div class="grouped inline fields">
            <div class="field">
              <div class="ui input">
                <textarea maxlength="140" rows="4" name="content" placeholder="Enter your message here ..."></textarea>
              </div>
            </div>
          </div>
          <button class="ui blue submit button">Send Message</button>
        </form>
        {{> formerror }}
      </div>
    </div>
    <aside class="two wide column">
      <img src="images/twitter4.png" class="ui medium image">
    </aside>
  </div>
</section>